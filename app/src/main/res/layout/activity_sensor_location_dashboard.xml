<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">


        <customfonts.MyTextView
            android:id="@+id/myTextView2"
            android:layout_width="150dp"

            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="37dp"
            android:foregroundGravity="left"
            android:padding="10dp"
            android:text="jspyn"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:background="@color/backGround">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/sensorType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:ms_background_color="@color/backGround"
                app:ms_hint="Select Sensor"
                app:ms_hint_color="@color/colorPrimary"
                app:ms_text_color="@color/colorPrimaryDark" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@+id/sensorType"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorAccent"

                />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/selectSensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view3"
                android:layout_marginTop="30dp"
                android:enabled="false"
                app:ms_background_color="@color/backGround"
                app:ms_hint="Select Location"
                app:ms_hint_color="@color/colorPrimary"
                app:ms_text_color="@color/colorPrimaryDark" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@+id/selectSensor"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorAccent"

                />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/selectDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginTop="30dp"
                android:enabled="false"
                app:ms_background_color="@color/backGround"
                app:ms_hint="Select Date"
                app:ms_hint_color="@color/colorPrimary"
                app:ms_text_color="@color/colorPrimaryDark" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@+id/selectDate"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorAccent"

                />

            <Button
                android:id="@+id/Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:text="Submit"
                android:textColor="@color/white" />


        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="100dp"

            android:layout_alignBottom="@+id/myTextView2"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="11dp"
            app:srcCompat="@drawable/jslogo" />


        <com.crystal.crystalpreloaders.widgets.CrystalPreloader
            android:id="@+id/loader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            app:crs_pl_fg_color="@color/accent"
            app:crs_pl_size="extra_large"
            app:crs_pl_style="expandable_balls" />

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>
