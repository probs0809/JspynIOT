<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Animation.AppCompat.Dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/addDLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:layout_width="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:lineSpacingExtra="8sp"
                android:text="Please Connect To JSPYN Board Before Continuing"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <customfonts.MyEditText
                android:id="@+id/ssid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/view"
                android:layout_below="@+id/textView2"
                android:layout_marginRight="40dp"
                android:layout_marginTop="27dp"
                android:background="#0000"
                android:hint="SSID"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="#ffccff "
                android:textColorHint="#ffccff "
                android:textSize="16dp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ssid"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/cardview_light_background" />

            <customfonts.MyEditText
                android:id="@+id/wPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/view2"
                android:layout_alignStart="@+id/view2"
                android:layout_below="@+id/view"
                android:layout_marginTop="24dp"
                android:background="#0000"
                android:hint="WiFi PASSWORD"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#ffccff "
                android:textColorHint="#ffccff "
                android:textSize="16dp" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/wPassword"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/cardview_light_background" />

            <customfonts.MyEditText
                android:id="@+id/sensorId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/view3"
                android:layout_alignStart="@+id/view3"
                android:layout_below="@+id/view2"
                android:layout_marginTop="24dp"
                android:background="#0000"
                android:hint="Custum Sensor Name"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="#ffccff "
                android:textColorHint="#ffccff "
                android:textSize="16dp" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/sensorId"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/cardview_light_background" />

            <Spinner
                android:id="@+id/sensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/view4"
                android:layout_alignStart="@+id/view4"
                android:layout_below="@+id/view3"
                android:layout_marginTop="24dp"
                android:background="#0000"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="#ADCCE2"
                android:textSize="16dp" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/sensor"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/cardview_light_background" />

            <customfonts.MyTextView
                android:id="@+id/config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/view3"
                android:layout_alignStart="@+id/view3"
                android:layout_below="@+id/view3"
                android:layout_marginTop="77dp"
                android:background="@drawable/angle2"
                android:backgroundTint="@color/common_google_signin_btn_text_light_default"
                android:drawableRight="@drawable/config"
                android:drawableTint="@color/cardview_light_background"
                android:gravity="center"
                android:padding="16dp"
                android:text="Configure"
                android:textAlignment="center"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressBar2"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/wifi" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:max="100"
                android:progress="100" />


        </RelativeLayout>
    </ScrollView>

</FrameLayout>
