<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="fill"
    android:layout_margin="2dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="16dp"
    grid:cardBackgroundColor="@color/cardview_shadow_start_color"
    grid:cardElevation="0dp"
    grid:layout_columnWeight="1">


    <Switch
        android:id="@+id/Switch"
        style="@android:style/Widget.Material.CompoundButton.Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:background="@drawable/angle2"
        android:backgroundTint="@color/colorPrimary"
        android:enabled="false"
        android:gravity="center"
        android:padding="20dp"
        android:switchMinWidth="20dp"
        android:switchPadding="30dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:thumbTint="@color/common_google_signin_btn_text_dark_focused" />

</android.support.v7.widget.CardView>