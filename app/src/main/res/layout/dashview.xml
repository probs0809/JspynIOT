<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

        <!-- Bottom View Start-->
        <LinearLayout
            android:id="@+id/bottom_wrapper"
            android:orientation="horizontal"
            android:layout_width="210dp"
            android:weightSum="1"
            android:layout_height="match_parent">

            <com.gc.materialdesign.views.ButtonIcon
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/green"
                materialdesign:iconDrawable="@android:drawable/ic_menu_edit"
                android:text="Edit"
                />

            <com.gc.materialdesign.views.ButtonIcon
                android:id="@+id/config"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/main_blue_stroke_color"
                android:text="Configure"
                materialdesign:iconDrawable="@drawable/config" />

            <com.gc.materialdesign.views.ButtonIcon
                android:id="@+id/deleteDevice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/red"
                materialdesign:iconDrawable="@android:drawable/ic_menu_delete"
                android:text="Delete"
                />

            <com.gc.materialdesign.views.ButtonIcon
                android:id="@+id/addShortcut"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/main_green_stroke_color"
                android:text="asc"
                materialdesign:iconDrawable="@android:drawable/ic_menu_view" />


            <!--What you want to show-->
        </LinearLayout>
        <!-- Bottom View End-->

        <!-- Surface View Start -->
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/imageButton0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:background="#fff"
                app:srcCompat="@mipmap/ic_launcher_round"
                />

            <customfonts.MyTextView
                android:id="@+id/d10"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/angle2"
                android:backgroundTint="@color/thumbColor"
                android:backgroundTintMode="src_in"
                android:gravity="center"
                android:padding="16dp"
                android:text="My Device"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#000"
                android:textSize="35sp"
                android:textStyle="bold" />
            <!--What you want to show in SurfaceView-->
        </LinearLayout>
        <!-- Surface View End -->


    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>
